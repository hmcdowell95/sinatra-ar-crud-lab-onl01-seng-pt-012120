<form action="/articles/<%= @article.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    Article title: <input type="text" name="title" value="<%=@article.title%>">
  Article content: <input type="text" name="content" value="<%=@article.content%>">
  <input type="submit" value="submit">
</form>
